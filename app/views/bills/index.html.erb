<p id="notice"><%= notice %></p>

<h1>Bills</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Date of issue</th>
      <th>Terms of payment</th>
      <th>Hourly rate</th>
      <th>Tax rate</th>
      <th>Taxable</th>
      <th>Withholding</th>
      <th>Total hours</th>
      <th>Discount</th>
      <th>Total cost</th>
      <th>Paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.customer %></td>
        <td><%= bill.date_of_issue %></td>
        <td><%= bill.terms_of_payment %></td>
        <td><%= bill.hourly_rate %></td>
        <td><%= bill.tax_rate %></td>
        <td><%= bill.get_taxable %></td>
        <td><%= bill.withholding %></td>
        <td><%= bill.total_hours %></td>
        <td><%= bill.discount %></td>
        <td><%= bill.get_total_cost %></td>
        <td><%= bill.paid %></td>
        <td><%= link_to 'Show', bill %></td>
        <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
        <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

